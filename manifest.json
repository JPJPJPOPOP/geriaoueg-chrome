{
    "name": "Geriaoueg",
    "version": "0.1.2",
    "manifest_version":2,
    "description": "Apertium Translate.",
    "options_page": "../html/options.html",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["css/basic.css"],
            "js": ["js/jquery.min.js", "js/mousestop.min.js", "js/xregexp-all-min.js","js/contentscript.js"],
            "all_frames":true
        }
    ], "permissions": [
        "storage"
    ], "icons": {"128": "apertium128.png" },
    
    "browser_action": {
        "default_icon": {                   
            "19": "apertium19.png",
            "38": "apertium38.png"        
        },
        "default_title": "Geriaoueg",      
        "default_popup": "html/popup.html"     
    }
}

